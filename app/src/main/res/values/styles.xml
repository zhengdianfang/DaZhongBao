<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:buttonStyle">@style/AppTheme.Button</item>
        <item name="buttonStyle">@style/AppTheme.Button</item>


    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/activity_login_button_background</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/buttonTextSize</item>
    </style>

    <style name="AppTheme.ToolbarText">
        <item name="android:textColor">@color/toolbar_title_light_color</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppTheme.EditText">
        <item name="android:background">@drawable/activity_login_input_default_background</item>
        <item name="android:editTextColor">@android:color/black</item>
        <item name="android:height">48dp</item>
        <item name="android:textSize">14dp</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginEnd">32dp</item>
    </style>

    <style name="AppTheme.EditText.Highlight">
        <item name="android:background">@drawable/activity_login_input_highlight_background</item>
        <item name="android:editTextColor">@android:color/black</item>
        <item name="android:height">48dp</item>
        <item name="android:textSize">14dp</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginEnd">32dp</item>
    </style>

    <color name="toolbar_title_light_color">#1E1E1E</color>
    <color name="toolbar_title_dark_color">#FFFFFF</color>

    <style name="AppTheme.RatingBarSmall" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/fragment_personal_partner_star_ratingbar</item>
        <item name="android:indeterminateDrawable">@drawable/fragment_personal_partner_star_ratingbar</item>
        <item name="android:minHeight">24dp</item>
        <item name="android:maxHeight">24dp</item>
    </style>
</resources>
