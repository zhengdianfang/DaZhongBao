<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:buttonStyle">@style/AppTheme.Button</item>
        <item name="buttonStyle">@style/AppTheme.Button</item>

    </style>
    <style name="AppTheme.LoadingPage">
       <item name="android:windowBackground">@mipmap/loading_background</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/activity_login_button_background</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/buttonTextSize</item>
    </style>

    <style name="AppTheme.ToolbarText">
        <item name="android:textColor">@color/toolbar_title_light_color</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="AppTheme.EditText">
        <item name="android:background">@drawable/activity_login_input_default_background</item>
        <item name="android:editTextColor">@android:color/black</item>
        <item name="android:height">48dp</item>
        <item name="android:textSize">14dp</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginEnd">32dp</item>
    </style>

    <style name="AppTheme.EditText.Highlight">
        <item name="android:background">@drawable/activity_login_input_highlight_background</item>
        <item name="android:editTextColor">@android:color/black</item>
        <item name="android:height">48dp</item>
        <item name="android:textSize">14dp</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginEnd">32dp</item>
    </style>
    <style name="AppTheme.Login"></style>
    <style name="AppTheme.Login.ThirdButton">
        <item name="android:drawablePadding">5dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/activity_login_weixin_button_text_color</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="AppTheme.Login.VerifyCodeButton">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:text">@string/get_verify_sms_code</item>
        <item name="android:textColor">@color/fragment_verify_sms_code_color</item>
        <item name="android:background">@drawable/fragment_verify_sms_code_button_background</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="AppTheme.RatingBarSmall" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/fragment_personal_partner_star_ratingbar</item>
        <item name="android:indeterminateDrawable">@drawable/fragment_personal_partner_star_ratingbar</item>
        <item name="android:minHeight">24dp</item>
        <item name="android:maxHeight">24dp</item>
    </style>

    <style name="AppTheme.PushFragment" />
    <style name="AppTheme.PushFragment.Item">
        <item name="android:layout_height">@dimen/fragment_personal_item_height</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:background">@drawable/fragment_setting_item_background</item>
    </style>
    <style name="AppTheme.PushFragment.EditLabel">
       <item name="android:textSize">14sp</item>
       <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="AppTheme.PushFragment.SecondEditLabel">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/bottom_bar_tab_text_color</item>
        <item name="android:layout_marginLeft">8dp</item>
    </style>

    <style name="AppTheme.PushFragment.EditText">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">8dp</item>
        <item name="android:gravity">right</item>
    </style>
    <style name="AppTheme.ProductDetail" />
    <style name="AppTheme.ProductDetail.TextLabel">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#c6cdfc</item>
    </style>
    <style name="AppTheme.ProductDetail.TextValue">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="AppTheme.ProductDetail.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/c_8c6465</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:background">@drawable/activity_product_detail_button_background</item>
    </style>
    <style name="AppTheme.ProductItem"></style>
    <style name="AppTheme.ProductItem.SoldCount">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/bottom_bar_tab_text_color</item>
        <item name="android:drawableLeft">@drawable/stock_sale_count_icon</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="AppTheme.ProductItem.SharesName">
    </style>
    <style name="AppTheme.ProductItem.Industry">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/bottom_bar_tab_text_color</item>
    </style>
    <style name="AppTheme.ProductItem.Price">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/bottom_bar_tab_text_color</item>
    </style>
    <style name="AppTheme.ProductItem.Divider">
        <item name="android:background">@color/c_ebebeb</item>
        <item name="android:layout_height">1dp</item>
    </style>
    <style name="AppTheme.ProductItem.Status">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/bottom_bar_tab_text_color</item>
    </style>
    <style name="AppTheme.ProductItem.IntentionButton">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_height">33dp</item>
        <item name="android:layout_width">94dp</item>
        <item name="android:background">@drawable/product_item_attentioned_button_background</item>
    </style>
    <style name="AppTheme.ProductItem.PayButton">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:background">@drawable/my_product_item_pay_button_background</item>
    </style>
    <style name="AppTheme.Personal"/>
    <style name="AppTheme.Personal.CountText">
        <item name="android:textColor">@color/c_3c3c3c</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>
    <style name="AppTheme.Personal.CountLabel">
        <item name="android:textColor">@color/c_a0a0a0</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="VoiceDialog" parent="android:style/Theme.Dialog">
        <!--背景颜色及透明程度-->
        <item name="android:windowBackground">@color/voice_background_color</item>
        <!--是否有标题 -->
        <item name="android:windowNoTitle">true</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsFloating">true</item>
        <!--是否模糊-->
        <item name="android:backgroundDimEnabled">false</item>
    </style>
</resources>
