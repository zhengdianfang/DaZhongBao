<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clickable="true"
    android:background="@color/fragment_background_color"
    tools:context="com.zhengdianfang.dazhongbao.views.setting.AccountSettingFragment">

    <com.zhengdianfang.dazhongbao.views.components.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/setting_account_and_secutry"
        app:toolbar_theme="light"
        app:enable_back="true" />
    <LinearLayout
        android:id="@+id/passwordViewGroup"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fragment_personal_item_height"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/fragment_setting_item_background">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@android:color/background_dark"
            android:text="@string/setting_password_modify"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/right_arrow_icon"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/phoneNumberViewGroup"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fragment_personal_item_height"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/fragment_setting_item_background">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@android:color/background_dark"
            android:text="@string/setting_phoneNumber_modify"/>

        <TextView
            android:id="@+id/phoneNumberTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginRight="8dp"
            tools:text="125****3333"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/right_arrow_icon"/>
    </LinearLayout>
</LinearLayout>
