<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/fragment_personal_user_info_header_height"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">


    <ImageView
        android:id="@+id/userHeaderView"
        android:layout_width="@dimen/personal_header_size"
        android:layout_height="@dimen/personal_header_size"
        android:layout_marginBottom="10dp"
        android:src="@mipmap/fragment_personal_default_header_image"
        tools:layout_editor_absoluteX="166dp"
        tools:layout_editor_absoluteY="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/markImageView"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/markImageView"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="0dp"
        android:layout_marginTop="57dp"
        android:src="@drawable/fragment_personal_company_icon"
        app:layout_constraintEnd_toEndOf="@+id/userHeaderView"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription"
        tools:layout_editor_absoluteY="57dp" />

    <TextView
        android:id="@+id/userNameTextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userHeaderView"
        tools:text="刘凯"/>

    <TextView
        android:id="@+id/phoneNumberTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="4dp"
        android:drawableRight="@drawable/right_arrow_icon"
        android:drawablePadding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userNameTextview"
        tools:text="156 9213 9225"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="4dp"
        android:gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phoneNumberTextView"
        android:id="@+id/linearLayout4">

        <TextView
            android:id="@+id/levelTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            tools:text="认证会员"/>
        <TextView
            android:id="@+id/upgradeVIPView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:drawableLeft="@mipmap/fragment_personal_upgrade_icon"
            android:drawablePadding="8dp"
            android:textColor="@color/colorPrimary"
            android:text="@string/fragment_personal_upgrade_vip"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4">

        <TextView
            android:id="@+id/myProductCountTextView"
            style="@style/AppTheme.Personal.CountText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="268" />

        <TextView
            android:id="@+id/textView9"
            style="@style/AppTheme.Personal.CountLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fragment_personal_may_product" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4">

        <TextView
            android:id="@+id/myAttentionProductCountTextView"
            style="@style/AppTheme.Personal.CountText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/c_3c3c3c"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="3744" />

        <TextView
            android:id="@+id/textView10"
            style="@style/AppTheme.Personal.CountLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fragment_personal_my_start" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4">

        <TextView
            android:id="@+id/myAuctionProductCountTextView"
            style="@style/AppTheme.Personal.CountText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="18" />

        <TextView
            android:id="@+id/textView11"
            style="@style/AppTheme.Personal.CountLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fragment_personal_my_aucation" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
