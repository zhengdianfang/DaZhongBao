<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_column="5"
    android:layout_row="5"
    android:paddingLeft="32dp"
    android:paddingRight="32dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:background="@color/colorPrimary">

   <TextView
       style="@style/AppTheme.ProductDetail.TextLabel"
       android:text="@string/actvity_productdetail_yestoday_earnings"/>


   <Button
       android:id="@+id/attentionButton"
       style="@style/AppTheme.ProductDetail.Button"
       android:text="@string/un_attention"
       android:layout_column="4"
       android:layout_rowSpan="2"
       android:layout_marginTop="8dp"/>
   <TextView
       android:id="@+id/yestodyClosePriceView"
       style="@style/AppTheme.ProductDetail.TextValue"
       tools:text="18.60"
       android:layout_row="1"
       android:layout_column="0"
       />

   <android.support.v4.widget.Space android:layout_row="2"
       android:layout_rowWeight="1"/>
   <TextView
       style="@style/AppTheme.ProductDetail.TextLabel"
       android:text="@string/actvity_productdetail_sold_count"
       android:layout_column="0"
       android:layout_row="3"/>
   <TextView
       android:id="@+id/soldCountView"
       style="@style/AppTheme.ProductDetail.TextValue"
       tools:text="20,000,000"
       android:layout_row="4"
       android:layout_column="0"
       />


   <TextView
       style="@style/AppTheme.ProductDetail.TextLabel"
       android:text="@string/actvity_productdetail_sold_limit"
       android:layout_column="4"
       android:layout_row="3"/>

   <TextView
       android:id="@+id/limitTimeView"
       style="@style/AppTheme.ProductDetail.TextValue"
       tools:text="æ˜¯"
       android:layout_row="4"
       android:layout_column="4"
       />
</GridLayout>