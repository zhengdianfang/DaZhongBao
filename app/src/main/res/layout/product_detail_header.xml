<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_column="5"
        android:layout_row="5"
        android:background="@drawable/product_detail_header_background"
        android:paddingBottom="16dp"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:paddingTop="16dp">

        <TextView
            style="@style/AppTheme.ProductDetail.TextLabel"
            android:text="@string/actvity_productdetail_yestoday_earnings" />


        <Button
            android:id="@+id/attentionButton"
            style="@style/AppTheme.ProductDetail.Button"
            android:layout_column="4"
            android:layout_marginTop="8dp"
            android:layout_rowSpan="2"
            android:text="@string/un_attention" />

        <TextView
            android:id="@+id/yestodyClosePriceView"
            style="@style/AppTheme.ProductDetail.TextValue"
            android:layout_column="0"
            android:layout_row="1"
            tools:text="18.60" />

        <android.support.v4.widget.Space
            android:layout_row="2"
            android:layout_rowWeight="1" />

        <TextView
            style="@style/AppTheme.ProductDetail.TextLabel"
            android:layout_column="0"
            android:layout_row="3"
            android:text="@string/actvity_productdetail_sold_count" />

        <TextView
            android:id="@+id/soldCountView"
            style="@style/AppTheme.ProductDetail.TextValue"
            android:layout_column="0"
            android:layout_row="4"
            tools:text="20,000,000" />


        <TextView
            style="@style/AppTheme.ProductDetail.TextLabel"
            android:layout_column="4"
            android:layout_row="3"
            android:text="@string/actvity_productdetail_sold_limit" />

        <TextView
            android:id="@+id/limitTimeView"
            style="@style/AppTheme.ProductDetail.TextValue"
            android:layout_column="4"
            android:layout_row="4"
            tools:text="是" />
    </GridLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@drawable/fragment_setting_item_background">
       <TextView
           android:id="@+id/headerStatusTipView"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:textColor="@color/c_a0a0a0"
           android:textSize="14sp"
           tools:text="您关注的项目暂未开拍！"/>
        <TextView
            android:id="@+id/bidCountView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/c_a0a0a0"
            android:textSize="14sp"
            tools:text="叫价12次"/>
    </LinearLayout>
</LinearLayout>
