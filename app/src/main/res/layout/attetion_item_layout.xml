<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:columnCount="3" >

    <TextView
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:layout_columnSpan="2"
        android:layout_columnWeight="1"
        tools:text="天成自控 [00004]"/>

    <Button
        android:layout_height="32dp"
        android:textSize="12sp"
        android:layout_column="2"
        android:layout_row="0"
        android:background="@drawable/product_item_un_attention_button_background"
        android:layout_gravity="right"
        android:textColor="@color/bottom_bar_tab_text_color"
        android:text="@string/remove_label"/>


    <TextView
        android:textSize="14sp"
        android:textColor="@color/bottom_bar_tab_text_color"
        android:layout_column="0"
        android:layout_row="1"
        android:layout_columnSpan="3"
        android:layout_columnWeight="1"
        android:layout_marginTop="8dp"
        tools:text="汽车 - 汽车零件"/>
    <TextView
        android:textSize="14sp"
        android:textColor="@color/bottom_bar_tab_text_color"
        android:layout_column="0"
        android:layout_row="2"
        android:layout_columnWeight="1"
        android:layout_marginTop="8dp"
        tools:text="意向价格: ￥28.60"/>
    <TextView
        android:textSize="14sp"
        android:textColor="@color/bottom_bar_tab_text_color"
        android:layout_column="2"
        android:layout_row="2"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:drawableLeft="@drawable/stock_sale_count_icon"
        android:drawablePadding="8dp"
        tools:text="出让200股"/>

    <TextView
        android:background="@color/bottom_bar_divider_color"
        android:layout_height="1dp"
        android:layout_columnSpan="3"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:layout_columnWeight="1"/>
    <TextView
        android:textSize="14sp"
        android:textColor="@color/bottom_bar_tab_text_color"
        android:layout_column="0"
        android:layout_row="4"
        android:layout_columnSpan="3"
        android:layout_columnWeight="1"
        android:layout_marginTop="8dp"
        tools:text="距离开拍： "/>
</GridLayout>