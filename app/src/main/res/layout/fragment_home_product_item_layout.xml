<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:columnCount="6"
    android:rowCount="3"
    android:padding="16dp"
    android:background="@drawable/fragment_setting_item_background">

    <TextView
        android:id="@+id/stockNameView"
        tools:text="天成自控"
        android:textColor="@android:color/black"
        android:textSize="14sp"/>
    <TextView
        android:id="@+id/stockCodeView"
        tools:text="[00606]"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:layout_columnWeight="1"
        android:layout_marginLeft="8dp"/>

    <ImageView
        android:src="@drawable/stock_sale_count_icon" />
    <TextView
        android:text="@string/product_item_to_sell"
        android:textSize="12sp"
        android:layout_marginStart="8dp"/>
    <TextView
        android:id="@+id/soldCountView"
        tools:text="200万"
        android:textSize="16sp"
        android:textColor="@android:color/holo_red_light"
        android:layout_gravity="right"
        android:layout_marginStart="24dp"
        tools:ignore="RtlHardcoded" />
    <TextView
        tools:text="@string/stock_unit"
        android:textSize="14sp"
        android:layout_gravity="right"
        android:layout_marginLeft="8dp"
        tools:ignore="RtlHardcoded" />
    <TextView
        android:id="@+id/industryNameView"
        tools:text="汽车-汽车零部件"
        android:textSize="14sp"
        android:layout_columnSpan="6"
        android:layout_marginTop="8dp"/>

    <TextView
        android:text="@string/product_item_will_pay_price"
        android:textSize="12sp"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_marginTop="8dp"/>
    <TextView
        android:id="@+id/nowUnitPriceView"
        tools:text="￥26.80"
        android:textSize="16sp"
        android:textColor="@android:color/holo_red_light"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_columnSpan="3"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"/>
    <Button
        android:id="@+id/attentionButton"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginTop="8dp"
        android:layout_columnSpan="2"
        android:textSize="12sp"
        android:background="@drawable/product_item_attentioned_button_background"
        android:elevation="0dp"
        tools:text="test"/>
</GridLayout>