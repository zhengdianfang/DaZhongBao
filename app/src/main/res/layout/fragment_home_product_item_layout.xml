<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:columnCount="3"
    android:padding="16dp"
    android:background="@drawable/fragment_setting_item_background">

    <TextView
        android:id="@+id/sharesNameView"
        tools:text="天成自控 [00606]"
        android:textColor="@android:color/black"
        android:layout_row="0"
        android:layout_columnSpan="2"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/soldCountView"
        android:textSize="12sp"
        tools:text="出让 200万 股"
        android:layout_row="0"
        android:layout_gravity="right"
        android:drawableLeft="@drawable/stock_sale_count_icon"
        android:drawablePadding="8dp"/>
    <TextView
        android:id="@+id/industryNameView"
        tools:text="汽车-汽车零部件"
        android:textSize="14sp"
        android:layout_row="1"
        android:layout_columnSpan="3"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/nowUnitPriceView"
        tools:text="意向价格：￥26.80"
        android:textSize="12sp"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_marginTop="8dp"/>
    <Button
        android:id="@+id/attentionButton"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginTop="8dp"
        android:layout_gravity="right"
        android:layout_columnSpan="2"
        android:textSize="12sp"
        android:background="@drawable/product_item_attentioned_button_background"
        android:elevation="0dp"
        tools:text="test"/>
</GridLayout>